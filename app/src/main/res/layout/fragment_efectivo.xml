<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:background="#2CBD60"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cobro.EfectivoFragment">

    <ImageView
        android:id="@+id/iv_expeditee"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_expeditee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMonto"
        android:layout_width="229dp"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"

        android:textColor="#0E2215"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_expeditee" />

    <Button
        android:id="@+id/btnMarcarPagado"
        android:layout_width="461dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#BDF2D0"
        android:text="MARCAR COMO PAGADO"
        android:textColor="#050505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMonto"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnMarcarEntregado"
        android:layout_width="461dp"
        android:layout_height="150dp"
        android:backgroundTint="#8DECB0"
        android:text="IR A MARCAR COMO ENTREGADO"
        android:textColor="#171313"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMonto"
        app:layout_constraintVertical_bias="0.463" />

</androidx.constraintlayout.widget.ConstraintLayout>